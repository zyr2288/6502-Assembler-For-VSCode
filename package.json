{
	"name": "6502-assembler",
	"author": {
		"name": "ZENG GE"
	},
	"displayName": "6502 Assembler",
	"description": "A simple 6502 assembler plugin for VSCode",
	"publisher": "ZENG-GE",
	"preview": true,
	"version": "0.1.6",
	"repository": {
		"url": "https://github.com/zyr2288/6502-Assembler-For-VSCode"
	},
	"icon": "syntaxes/fc.png",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Other"
	],
	"activationEvents": [
		"onLanguage:asm6502"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "6502extension.compliteThis",
				"title": "编译本文件"
			},
			{
				"command": "6502extension.compliteMain",
				"title": "编译主文件"
			}
		],
		"languages": [
			{
				"id": "asm6502",
				"aliases": [
					"asm6502"
				],
				"extensions": [
					".65s"
				],
				"configuration": "./syntaxes/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "asm6502",
				"scopeName": "source.asm.asm6502",
				"path": "./syntaxes/asm6502.tmLanguage.json"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorLangId == asm6502",
					"command": "6502extension.compliteThis",
					"group": "z_command"
				},
				{
					"when": "editorLangId == asm6502",
					"command": "6502extension.compliteMain",
					"group": "z_command"
				}
			]
		},
		"keybindings": [
			{
				"command": "6502extension.compliteThis",
				"key": "ctrl+f5",
				"mac": "cmd+f5",
				"when": "editorTextFocus"
			},
			{
				"command": "6502extension.compliteMain",
				"key": "ctrl+f6",
				"mac": "cmd+f6",
				"when": "editorTextFocus"
			}
		],
		"configurationDefaults": {
			"[asm6502]": {
				"editor.wordBasedSuggestions": false
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.4",
		"@types/mocha": "^8.2.3",
		"@types/node": "^14.17.27",
		"@types/vscode": "^1.60.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"eslint": "^7.32.0",
		"glob": "^7.2.0",
		"mocha": "^8.4.0",
		"ts-loader": "^8.3.0",
		"typescript": "^4.4.4",
		"vscode-test": "^1.6.1",
		"webpack": "^5.58.2",
		"webpack-cli": "^4.9.1"
	}
}
