{
	"name": "6502-assembler",
	"author": {
		"name": "ZENG GE"
	},
	"displayName": "6502 Assembler",
	"description": "A simple 6502 assembler plugin for VSCode",
	"version": "0.1.0",
	"icon": "syntaxes/fc.png",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Programming Languages",
		"Snippets",
		"Other"
	],
	"activationEvents": [
		"onLanguage:asm6502"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "6502extension.compliteThis",
				"title": "编译本文件"
			},
			{
				"command": "6502extension.compliteMain",
				"title": "编译主文件"
			}
		],
		"languages": [
			{
				"id": "asm6502",
				"aliases": [
					"asm6502"
				],
				"extensions": [
					".65s"
				],
				"configuration": "./syntaxes/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "asm6502",
				"scopeName": "source.asm.asm6502",
				"path": "./syntaxes/asm6502.tmLanguage.json"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorLangId == asm6502",
					"command": "6502extension.compliteThis",
					"group": "z_command"
				},
				{
					"when": "editorLangId == asm6502",
					"command": "6502extension.compliteMain",
					"group": "z_command"
				}
			]
		},
		"keybindings": [
			{
				"command": "6502extension.compliteThis",
				"key": "ctrl+f5",
				"mac": "cmd+f5",
				"when": "editorTextFocus"
			},
			{
				"command": "6502extension.compliteMain",
				"key": "ctrl+f6",
				"mac": "cmd+f6",
				"when": "editorTextFocus"
			}
		],
		"configurationDefaults": {
			"[asm6502]": {
				"editor.fontSize": 20,
				"editor.tabSize": 8,
				"editor.wordBasedSuggestions": false
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"eslint": "^7.6.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}